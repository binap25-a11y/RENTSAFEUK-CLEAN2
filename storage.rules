
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // FINAL DIAGNOSTIC RULE: This rule grants open access to the test directory.
    // This is required to isolate and fix the underlying connection issue.
    // It does NOT affect the security of your main application folders.
    match /public-test-uploads/{allPaths=**} {
      allow read, write: if true;
    }

    // --- Original Rules ---
    // These rules remain in place but will not affect the test upload path.
    match /documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /maintenance/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
